%h1 取り置きチケットの登録・変更
%p
  - p @revs
  = form_for @revs, :url => '/ticket_reservations/update', :html => {:class => "form-horizontal"} do |fb|
    - if @revs.errors.any?
      #error_explanation
        %h2= "#{pluralize(@revs.errors.count, "error")} prohibited this nontan from being saved:"
        %ul
          - @revs.errors.full_messages.each do |msg|
            %li= msg
    - @revs.ticket_reservations.each_with_index do |rev, ind|
      - label = 'ticket_reservations[' + ind.to_s + ']'
      = fields_for label, rev do |f|
        = f.hidden_field :id
        .form-group
          %label.col-sm-2.col-xs-12.control-label  名前
          .col-xs-6.col-sm-5
            = f.text_field :fname, :placeholder => "姓",:class => "form-control", :required => true
          .col-xs-6.col-sm-5
            = f.text_field :name, :placeholder => "名",:class => "form-control", :required => true

        .form-group
          %label.col-sm-2.col-xs-12.control-label  名前(よみ)
          .col-xs-6.col-sm-5
            = f.text_field :fname_pron, :placeholder => "せい",:class => "form-control", :required => true
          .col-xs-6.col-sm-5
            = f.text_field :name_pron, :placeholder => "めい",:class => "form-control", :required => true

        .form-group
          %label.col-sm-2.control-label 枚数
          .col-sm-10
            = f.number_field :num_of_ticket, :min => 0, :max => 20
            枚
            - if !rev.num_of_ticket.nil? && rev.num_of_ticket > 0
              %span.glyphicon.glyphicon-ok.text-success{:"aria-hidden" => 'true'}
        - if is_granted :PR
          .form-group
            %label.col-sm-2.control-label 招待者
            .col-sm-10
              %small.text-danger
                自分の場合は記入しない
              = f.text_field :esp_name, :class => "form-control", :placeholder => current_user.long_name
            
        %hr
    .actions
      %p.text-right
        = fb.submit '登録', :class => "btn btn-primary"
