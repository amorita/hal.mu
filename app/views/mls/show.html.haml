%h4
  = @ml['name']

%table.table
  - @messages.each do |m|
    %tr
      %td
        subject
      %td
        = m['subject']
    %tr
      %td
        date
      %td
        = m['date']
    %tr
      %td
        from
      %td
        - from = m['from']
        - if from == 'info@hal.mu'
          システム
        - else
          - user = User.where(:email => from).first
          - if user.nil?
            - user = User.where(:email2 => from).first
            - unless user.nil?
              = user.normal_name + 'さん'
            - else
              = from[0,5]
          - else
            = user.normal_name + 'さん'
    %tr
      %td
        body
      %td
        = simple_format m['body']

- if !@is_first
  前の10件
- if !@ml['nextPageToken'].nil?
  %a{:href => '/mls/' + @ml['id'] + '?pages=' + @ml['nextPageToken']} 次の10件
