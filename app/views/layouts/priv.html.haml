      ga('send', 'pageview');
  %body.body
    .container
      .row
        .heading-container.col-md-12.col-sm-12
          #heading_upper.hidden-xs
            %img{:height => "220", :src => "/img/top_right.png", :width => "280"}/
          #heading_upper.visible-xs.heading_upper_xs
            %img{:height => "150", :src => "/img/top_right.png"}/
          .clear_box
      .ROW
        .col-md-12{:style => "background: #fff"}
          %p &nbsp;
          = yield
          %p.text-right
            = button_tag '閉じる/キャンセル', :type => 'button', :onclick => "window.open('about:blank','_self').close(); return false;", :class => 'btn btn-warning'
          %p &nbsp;  