        %img{:height => '24px', :src => '/social_icons/behance.png'}
      .col-sm-10
        = f.text_field :behance, :placeholder => "https://www.behance.net/yourid",:class => "form-control"

    .actions
      %p.text-right
        = f.submit '登録', :class => "btn btn-primary"
